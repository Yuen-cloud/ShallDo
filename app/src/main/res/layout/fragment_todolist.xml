<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.todoList.TodoListFragment">

    <Button android:layout_width="50sp" android:layout_height="50sp"
            android:layout_marginTop="540sp"
            android:layout_marginLeft="320sp"
            android:text="+"
            android:textColor="#FFFFFF"
            android:id="@+id/addTask"
            android:background="@drawable/btn_circle"/>

    <androidx.recyclerview.widget.RecyclerView android:layout_width="match_parent" android:layout_height="match_parent"
                                               android:id="@+id/todolist_view"
                                               android:visibility="gone"
    />


</RelativeLayout>